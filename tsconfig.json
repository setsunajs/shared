{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "preserve",
    "jsxFactory": "_jsx",
    "jsxFragmentFactory": "Fragment",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": [
      "vitest",
      "vitest/globals",
      "@types/testing-library__jest-dom"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "importHelpers": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": [
    "vitest",
    "vitest/globals",
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}